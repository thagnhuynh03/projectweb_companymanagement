@model List<huynhkimthang_0145_Final_LTC_.Models.Entities.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-column w-col w-col-9">
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().EmpName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                <th>@Html.DisplayNameFor(model => model.First().Dep.DepName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Role.RoleName)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EmpName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Dep.DepName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EmpId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="Delete" asp-route-id="@item.EmpId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

